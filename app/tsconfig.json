{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "jsx": "react-native"
  },
  "include": [
    "src",
    "*.ts",
    "index.tsx",
    "*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
